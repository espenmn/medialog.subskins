#portal-globalnav {
	list-style-type: none;
	height: auto;
	margin: 0;
	overflow: hidden;
	background: #000;
	text-decoration: none;
	width: 100%;
	clear: both;
	border-bottom-style: none;
	border-style: none;
}

#portal-globalnav:after {
	content: "";
	display: block;
	clear: both;
	height: 1px;
	overflow: hidden;
}

/* for IE */

* html #portal-globalnav {
	height: 1em;
	overflow: visible;
}

#portal-globalnav li {
	display: block;
	float: left;
	margin: 0;
	padding: 0;
}

#portal-globalnav li a {
	display: block;
	float: left;
	padding: 0.25em 1.25em;
	background: #000;
	color: #fff;
	letter-spacing: 1px;
	text-decoration: none;
	text-transform: uppercase;
	font-weight: bold;
	border-top: 1px solid black;
	font-size: 10pt;
}

#portal-globalnav li a:hover {
	text-decoration: none;
	background-color: black;
	border-top: 1px solid black;
	color: #fdf3d4;
}

#portal-globalnav li.selected a {
	background: white;
	font-weight: bold;
	text-decoration: none;
	border-top: 1px solid black;
	color: gray;
}

/* </dtml-with> */