.portletNavigationTree li {
	font-family: Arial, Helvetica, sans-serif,sans-serif;
	border-top: 1px solid <dtml-var expr="dim_to_white(color=SubSkinsColor1, percent='50')">;
	border-bottom: 1px solid <dtml-var expr="dim_to_black(color=SubSkinsColor1, percent='75')">;
	padding-left: 13px;
	padding-right: 10px;
  background: &dtml-SubSkinsColor1;;
}

.portletNavigationTree  li:hover {
	background: <dtml-var expr="dim_to_black(color=SubSkinsColor1, percent=80)">;
}

.portletNavigationTree li a {
	padding: 8px 0;
	color: white;
	display: block;
	clear: both;
	text-decoration: none;
	font: 12px Arial, Helvetica, sans-serif,sans-serif;
}

li.navTreeCurrentNode {
	background: <dtml-var expr="dim_to_black(color=SubSkinsColor1, percent=90)">;
}

.portletNavigationTree .navTreeCurrentNode li a {
	padding: 4px 0;
}

.portletNavigationTree .navTreeCurrentNode li {
	background: <dtml-var expr="dim_to_black(color=SubSkinsColor1, percent=90)">;
}

.navTreeCurrentItem.navTreeCurrentNode :before {
	content: "Â» ";
	color: &dtml-SubSkinsColor4;;
}

