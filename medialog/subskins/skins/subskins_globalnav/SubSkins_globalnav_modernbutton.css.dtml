#portal-globalnav {
	margin: 5px 0;
	clear: both;
	padding-left: 20px;
	height: 30px;
}

#portal-globalnav:after {
	content: "";
	display: block;
	clear: both;
	height: 1px;
	overflow: hidden;
}

/* for IE */
* html #portal-globalnav {
	height: 1em;
	overflow: visible;
}

#portal-globalnav li {
	display: block;
	float: left;
	margin: 0 2px;;
	padding: 0;
	padding-left: 20px;
	background: transparent url(&dtml-portal_url;/subskins_getimage/&dtml.url_quote-SubSkinsColor2;/modern_buttonII.png) no-repeat 0 0;
}

#portal-globalnav li a {
	display: block;
	float: left;
	text-decoration: none;
	padding-right: 20px;
	line-height: 30px;
	color: white;
	font-weight: normal;
	font-style: normal;
	background: transparent url(&dtml-portal_url;/subskins_getimage/&dtml.url_quote-SubSkinsColor2;/modern_buttonII.png) no-repeat right 0;
}

#portal-globalnav li.selected {
		background: transparent url(&dtml-portal_url;/subskins_getimage/&dtml.url_quote-SubSkinsColor1;/modern_buttonII.png) no-repeat 0 0;
}

#portal-globalnav li.selected a {
background: transparent url(&dtml-portal_url;/subskins_getimage/&dtml.url_quote-SubSkinsColor1;/modern_buttonII.png) no-repeat right 0;
}

#portal-globalnav li a:hover {
	text-decoration:underline;
}
/* </dtml-with> */

